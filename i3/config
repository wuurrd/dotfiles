# change container layout (stacked, tabbed, toggle split)
# bindsym $win+s layout stacking
bindsym $win+w layout tabbed
bindsym $win+e layout toggle split
bindsym $win+y fullscreen disable, floating enable, resize set 251 170, sticky enable, move window to position 1515 20

mode "split" {
        bindsym 0 exec "i3-msg layout toggle split && i3-msg mode default"
        bindsym 1 exec "i3-msg layout tabbed && i3-msg mode default"
        bindsym 2 exec "i3-msg split v && i3-msg mode default"
        bindsym 3 exec "i3-msg split h && i3-msg mode default"
        

        bindsym q mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Control+q mode "split"


